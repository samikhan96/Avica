                    android:textColor="@color/menu_icon"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@color/menu_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:backgroundTint="@color/grey"/>
    </LinearLayout>

</LinearLayout>